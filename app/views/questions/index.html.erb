<h2>Listing questions</h2>
<div class="subtitle">
Poll: <%= @poll.name %><br />
Group: <%= @group.name %><br />
</div>

<table>
  <tr>
    <th>name</th>
  </tr>
  <%if @questions %>
    <% for question in @questions %>
      <tr>
        <td><%=h question.text %></td>
        <td>
          <% unless @questions.first == question %>
            <%= link_to 'move up', :controller=>'questions', :action=>'moveup',
              :position=>question.position, :group_id=>question.group_id, :id=>question %>
          <% end %>
        </td>
        <td>
          <% unless @questions.last == question %>
            <%= link_to 'move down', :controller=>'questions', :action=>'movedown',
              :position=>question.position, :group_id=>question.group_id, :id=>question %>
          <% end %>
        </td>
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to 'Destroy', question, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  <%  end %>
</table>

