<h1>Listing users</h1>
<p>
<strong><em>This site is not intended to be used to collect real data</em></strong>
</p>

<table>
  <tr>
    <th>username</th>
    <th>Email</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.username %></td>
    <td><%=h user.email %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<div id="bottom-nav">
<%= link_to 'New user', :controller => 'users', :action => 'newaccount' %>
</div>
