<h1> User <%=h @user.username %> Home Page </h1>
<% polls = @user.polls %>
<% if polls.size > 0 %>
  <h3> Your polls </h3>
  <table>
    <tr><th>Poll Name</th></tr>
    <% polls.each do |poll| %>
    <tr>
    <td><%=h poll.name %></td>
    <td><%= link_to 'Show', poll %></td>
    <td><%= link_to 'Edit', edit_poll_path(poll) %></td>
    <td><%= link_to 'Answer Summary', answer_path(poll) %></td>
    <td><%= link_to 'Answer Table', :controller=>'answers',
      :action=>'tabular', :id=>(poll) %></td>
    <td><%= link_to 'Destroy', poll, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
    <% end %>
  <% end %>
</table>
<%= link_to 'Create a New Poll', new_poll_path %>