<h1>New user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name, :size=>40 %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.text_field :password, :size=>40 %>
  </p>
  <p>
    <%= f.label :password_confirmation, 'Confirm' %><br />
    <%= f.text_field :password_confirmation, :size=>40 %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email, :size=>40 %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', users_path %>